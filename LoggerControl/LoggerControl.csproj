    <Authors>Touseef Elahi</Authors>
    <Company>Stira.sa</Company>
    <Product>Log viewer</Product>
    <PackageId>LogViewer</PackageId>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
